// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "icon_theme": "JetBrains New UI Icons (Dark)",
  "session": {
    "trust_all_worktrees": true
  },
  "vim_mode": true,
  // --- Theme ---
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Mocha"
  },
  // --- Fonts ---
  "ui_font_size": 14,
  "ui_font_family": "SF Pro",
  "buffer_font_size": 14,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_features": {
    "liga": true, // standard ligatures (fi, fl, etc.)
    "calt": true // contextual alternates (=> -> != === etc.)
  },
  "buffer_line_height": {
    "custom": 1.7
  },
  // --- Editor ---
  "cursor_blink": false,
  "show_whitespaces": "boundary",
  "tab_size": 2,
  // "soft_wrap": "preferred_line_length",
  // "preferred_line_length": 120,
  "scroll_beyond_last_line": "one_page",
  "relative_line_numbers": "enabled",
  "gutter": {
    "line_numbers": true,
    "code_actions": true,
    "folds": true,
    "runnables": true
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "diagnostics": "all"
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": false,
    "show_other_hints": true
  },
  // --- File tree ---
  "project_panel": {
    "indent_size": 16,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "scrollbar": {
      "show": "auto"
    }
  },
  // --- Tabs ---
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": true,
    "enable_keep_preview_on_code_navigation": true
  },
  // --- Terminal ---
  "terminal": {
    "font_size": 14,
    "font_family": "JetBrainsMono Nerd Font",
    "line_height": {
      "custom": 1.4
    },
    "copy_on_select": true,
    "blinking": "off",
    "toolbar": {
      "breadcrumbs": false
    }
  },
  // --- Git ---
  "git": {
    "inline_blame": {
      "enabled": true,
      "delay_ms": 800
    },
    "hunk_style": "staged_hollow"
  },
  // --- Formatting ---
  "format_on_save": "on",
  "formatter": "language_server",
  // --- Language-specific ---
  "languages": {
    "Python": {
      "tab_size": 4,
      "preferred_line_length": 120,
      "formatter": "language_server",
      "format_on_save": "on"
    },
    "TypeScript": {
      "tab_size": 2,
      "preferred_line_length": 100,
      "format_on_save": "on"
    },
    "TSX": {
      "tab_size": 2,
      "preferred_line_length": 100,
      "format_on_save": "on"
    },
    "JSON": {
      "tab_size": 2,
      "format_on_save": "on"
    },
    "YAML": {
      "tab_size": 2
    },
    "Markdown": {
      "soft_wrap": "editor_width"
    }
  },
  // --- File exclusions ---
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/node_modules",
    "**/__pycache__",
    "**/.pytest_cache",
    "**/.mypy_cache",
    "**/.ruff_cache",
    "**/dist",
    "**/build",
    "**/.venv",
    "**/*.pyc"
  ],
  // --- Telemetry ---
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  }
}
